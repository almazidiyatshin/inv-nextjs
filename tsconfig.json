{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"skipLibCheck": true,
		"baseUrl": "./src",
		"paths": {
			"app/*": ["app/*"],
			"screens/*": ["screens/*"],
			"widgets/*": ["widgets/*"],
			"features/*": ["features/*"],
			"entities/*": ["/entities/*"],
			"shared/*": ["shared/*"]
		},
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/app/api/auth/[...nextauth]/route.ts"
	],
	"exclude": ["node_modules"]
}
