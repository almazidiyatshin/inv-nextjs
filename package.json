{
	"name": "investly",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"check-types": "pnpm tsc --noEmit",
		"check": "pnpm exec biome check --write & pnpm check-types",
		"lint": "pnpm exec biome lint --write",
		"format": "pnpm exec biome format --write",
		"prepare": "husky",
		"postinstall": "prisma generate --no-engine",
		"migrate:prod": "prisma migrate dev --name",
		"migrate:test": "DATABASE_URL=$(grep DEV_DATABASE_URL .env | cut -d '=' -f2-) prisma migrate dev --name",
		"migrate-reset:prod": "prisma migrate reset",
		"migrate-reset:test": "DATABASE_URL=$(grep DEV_DATABASE_URL .env | cut -d '=' -f2-) prisma migrate reset"
	},
	"dependencies": {
		"@chakra-ui/charts": "^3.21.0",
		"@chakra-ui/react": "^3.21.0",
		"@emotion/react": "^11.14.0",
		"@hookform/resolvers": "^5.1.1",
		"@prisma/client": "^6.9.0",
		"@prisma/extension-accelerate": "^2.0.1",
		"@reduxjs/toolkit": "^2.2.7",
		"cheerio": "^1.0.0",
		"classnames": "^2.5.1",
		"latest": "^0.2.0",
		"lodash": "^4.17.21",
		"next": "14.2.5",
		"next-auth": "^4.24.11",
		"next-intl": "^4.3.4",
		"next-themes": "^0.4.6",
		"react": "^18",
		"react-dom": "^18",
		"react-hook-form": "^7.58.0",
		"react-icons": "^5.3.0",
		"react-redux": "^9.1.2",
		"recharts": "^2.15.3",
		"xml2js": "^0.6.2",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.0",
		"@chakra-ui/cli": "^3.21.0",
		"@types/lodash": "^4.17.20",
		"@types/node": "^20",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"@types/xml2js": "^0.4.14",
		"globals": "^15.10.0",
		"husky": "^9.1.7",
		"prisma": "^6.9.0",
		"typescript": "^5"
	}
}
