generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EAssetCategory {
  SHARE
  BOND
  METAL
  MONEY
}
enum EAssetName {
  EQMX
  OBLG
  GOLD
  SBMX
  SBCB
  SBGB
  SBRB
  SBGD
  USD
  RUB
}
enum ECurrency {
  USD
  RUB
}

model AssetRecord {
  id              Int             @id @default(autoincrement())
  portfolioId     Int      
  portfolio       Portfolio       @relation(fields: [portfolioId], references: [id])
  name            EAssetName
  type            EAssetCategory   
  quantity        Int    
  price           Float    
  currency        ECurrency
}

enum EPortfolioType {
  BROKERAGE
  MONEY
}
enum EPortfolioName {
  VTB
  SBER
  MONEY
}

model Portfolio {
  id          Int               @id @default(autoincrement())
  createdAt   DateTime          @default(now())
  name        EPortfolioName
  type        EPortfolioType
  assets      AssetRecord[]
}